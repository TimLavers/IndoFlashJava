<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView android:id="@+id/word_list_title_view"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:textSize="@dimen/text_size_title"
                  android:background="#ed2e38"/>
    </LinearLayout>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="match_parent">
        <TextView android:id="@+id/word_view"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:background="#ffffff"
                  android:padding="5dp"
                  android:layout_weight="1"
                  android:textSize="@dimen/text_size_word"/>
        <TextView android:id="@+id/definition_view"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:background="#ffffff"
                  android:padding="5dp"
                  android:layout_weight="1"
                  android:textSize="@dimen/text_size_word"/>

        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <ImageButton android:id="@+id/indonesian_first_button"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@android:color/transparent"
                         android:padding="15dp"
                         android:layout_weight="1"
                         android:contentDescription="@string/indonesian_first"/>
            <ImageButton android:id="@+id/add_to_favourites_button"
                         android:contentDescription="@string/add_to_favourites"
                         android:layout_width="wrap_content"
                         android:hapticFeedbackEnabled="true"
                         android:background="@android:color/transparent"
                         android:padding="15dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"/>
            <ImageButton android:id="@+id/shuffle_button"
                         android:contentDescription="@string/shuffle"
                         android:layout_width="wrap_content"
                         android:padding="15dp"
                         android:layout_weight="1"
                         android:background="@android:color/transparent"
                         android:layout_height="wrap_content"/>
            <ImageButton android:id="@+id/show_word_lists_button"
                         android:background="@android:color/transparent"
                         android:padding="15dp"
                         android:layout_weight="1"
                         android:contentDescription="@string/show_word_lists"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <Button android:id="@+id/next_button"
                         android:layout_width="fill_parent"
                         android:textSize="26dp"
                         android:padding="25dp"
                         android:background="@android:color/transparent"
                         android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
